<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/padding_lista">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="70">

        <TextView
            android:id="@+id/conceptoGasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fechaGasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gris_textos"/>
    </LinearLayout>

    <TextView
        android:id="@+id/importeGasto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:gravity="end|center_vertical"
        android:layout_gravity="end|center_vertical"/>

    <TextView
        android:id="@+id/icono_gastoFoto"
        android:layout_marginLeft="@dimen/margin_button_clientes"
        android:layout_marginStart="@dimen/margin_button_clientes"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_weight="5"/>

</LinearLayout>