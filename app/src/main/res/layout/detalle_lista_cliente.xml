<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/padding_lista"
        android:gravity="center_vertical">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/bt_favorito"
            android:focusable="false"
            android:textSize="@dimen/size_icono_boton_favorito"
            android:background="@android:color/transparent"
            android:textColor="@color/icono_favoritos"/>

        <TextView
            android:layout_marginRight="@dimen/margin_button_clientes"
            android:layout_width="0dp"
            android:singleLine="true"
            android:layout_height="match_parent"
            android:id="@+id/nombre_cliente"
            android:layout_weight="6"
            android:gravity="center_vertical"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt_enviar_email"
            android:layout_weight="1"
            android:background="@drawable/botones_clientes"
            android:textSize="@dimen/size_icono_botones"
            android:textColor="@color/blanco"
            android:focusable="false"
            android:layout_marginRight="@dimen/margin_button_clientes"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt_telefono"
            android:layout_weight="1"
            android:background="@drawable/botones_clientes"
            android:textSize="@dimen/size_icono_botones"
            android:textColor="@color/blanco"
            android:focusable="false"
            />
    </LinearLayout>
</LinearLayout>