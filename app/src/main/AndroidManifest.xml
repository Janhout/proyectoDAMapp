<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.janhout.proyecto.proyectodam" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".actividades.Login"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".actividades.RecordarPass"
            android:label="@string/title_activity_recordar_pass"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".actividades.Principal"
            android:label="@string/title_activity_principal"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".actividades.NuevoGasto"
            android:label="@string/title_activity_nuevo_gasto"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".actividades.LectorPDF"
            android:label="@string/title_activity_lector_pdf"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".actividades.MostrarCliente"
            android:label="@string/title_activity_mostrar_cliente"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".actividades.NuevoCliente"
            android:label="@string/title_activity_nuevo_cliente"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".actividades.NuevaFactura"
            android:label="@string/title_activity_nueva_factura"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".actividades.NuevoProducto"
            android:label="@string/title_activity_nuevo_producto"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".actividades.Inicial"
            android:label="@string/title_activity_inicial"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".actividades.CrearCuenta"
            android:label="@string/title_activity_crear_cuenta"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
